# Django Secret Key (generate a new one for production)
DJANGO_SECRET_KEY=your-secret-key-here

# Django Debug Mode (set to False for production)
DJANGO_DEBUG=False

# Environment type
VERCEL_ENV=production

# Database URL (PostgreSQL)
# Format: postgresql://user:password@host:port/dbname
# For Vercel, use a managed database service like Vercel Postgres, Supabase, or Railway
DATABASE_URL=postgresql://user:password@localhost:5432/evenest

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com,*.vercel.app

# CSRF trusted origins (comma-separated)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,https://your-domain.com,https://*.vercel.app

# Security settings (set to True in production with HTTPS)
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True

# Static files settings
STATIC_URL=/static/
STATIC_ROOT=staticfiles/

# Media files settings
MEDIA_URL=/media/
MEDIA_ROOT=media/

# Email settings (optional, for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# AWS S3 (optional, for media storage in production)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
