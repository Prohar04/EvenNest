# Environment Variables for Vercel Deployment
# Copy and fill these in, then add to Vercel Dashboard

# ===== DJANGO CORE =====
DJANGO_SECRET_KEY=django-insecure-your-generated-secret-key-here
DJANGO_DEBUG=False

# ===== DATABASE CHOICE =====
USE_SQLITE=False           # Set to True for test-only deployment
USE_S3=True               # Set to True if using AWS S3

# ===== DATABASE CONFIGURATION =====
# Only needed if USE_SQLITE=False
DB_ENGINE=postgresql
DB_NAME=evenest_prod
DB_USER=evenest_admin
DB_PASSWORD=your-postgres-password-here
DB_HOST=your-rds-endpoint.us-east-1.rds.amazonaws.com
DB_PORT=5432

# ===== AWS S3 CONFIGURATION =====
# Only needed if USE_S3=True
AWS_STORAGE_BUCKET_NAME=evenest-media-prod
AWS_S3_REGION_NAME=us-east-1
AWS_S3_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_S3_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_S3_CUSTOM_DOMAIN=evenest-media-prod.s3.amazonaws.com

# ===== VERCEL SPECIFIC =====
VERCEL_URL=evenest-xxxx.vercel.app

# ===== OPTIONAL: MIGRATION ENDPOINT =====
MIGRATION_SECRET=your-random-migration-secret-token

# ===== OPTIONAL: EMAIL CONFIGURATION =====
